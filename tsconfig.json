{
  "compilerOptions": {
    "baseUrl": "src",
    "target": "es5",
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react",
    "lib": [
      "es2015",
      "es2020",
      "dom"
    ],
    "skipLibCheck": false,    
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "src"
  ]
}
